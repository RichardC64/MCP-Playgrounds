<Window x:Class="SseWpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sseWpfClient="clr-namespace:SseWpfClient"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="SseClient" Height="240" Width="320"
        d:DataContext="{d:DesignInstance Type=sseWpfClient:MainWindowViewModel, IsDesignTimeCreatable=True}"
>

    <Border Padding="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <StackPanel>
                <TextBlock Text="Sélectionnez le cours d'actions :" />
                <ComboBox ItemsSource="{Binding Actions}"
                          SelectedItem="{Binding SelectedAction, Mode=TwoWay}" />

                
                <TextBlock Text="{Binding ReceptionDate, StringFormat='{}Date de réception : {0:HH:mm:ss}'}"
                           Margin="0 20 0 0" />
                <TextBlock Text="{Binding ReceptionAction, StringFormat='{}Action : {0}'}" />
                <TextBlock Text="{Binding Value, StringFormat='{}Valeur : {0}'}" />
                <TextBlock Text="{Binding EventType, StringFormat='{}Event Type : {0}'}" />
            </StackPanel>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Button Content="Start" Command="{Binding StartSseCommand}" Grid.Column="0" HorizontalAlignment="Left" Padding="5" Width="100" />
                <Button Content="Stop" Command="{Binding StopSseCommand}" Grid.Column="2" HorizontalAlignment="Right" Padding="5" Width="100"/>
            </Grid>

        </Grid>
    </Border>

</Window>
